{
  "manifest_version": 3,
  "name": "Scribd Content Tool",
  "version": "1.0",
  "description": "View and generate download links for Scribd documents directly from your browser.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
